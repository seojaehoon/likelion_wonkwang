<div class="container">
<h2>하루닥터 회원가입</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="form-group">
   <%= f.label :이름 %><br>
   <%= f.text_field :name, autofocus: true %>
</div>
<div class="form-group">
    <%= f.label :나이 %><br>
    <%= f.number_field :age, autofocus: true %>
</div>
<div class="btn-group" data-toggle="buttons">
    <p style="margin-bottom:0;"><%= f.label :성별 %></p>
    <label class="radio_button"> 남자
       <%= f.radio_button :gender, '남자', checked: true %>
    </label>
    <label class="radio_button active"> 여자
       <%= f.radio_button :gender, '여자', checked: true %>
    </label><br>
    </br>
</div>
  <div class="field">
    <%= f.label :이메일 %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :비밀번호 %>
    <% if @minimum_password_length %>
    <em>(최소<%= @minimum_password_length %>자)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :비밀번호_확인 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label "닉네임" %><br/>
    <%= f.text_field :nickname, :required => true %><br/>
  </div>
  <div class="actions">
    <%= f.submit "가입", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>