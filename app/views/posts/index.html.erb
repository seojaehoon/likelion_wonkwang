<div class="container">
<style>
       div{
         width: 400px;
         padding: 30px;
         margin: 30px;
       }
       body div:last-child{
         border: 5px solid gray;
       }
</style>
<h1>게시판 목록</h1>

<table class="table">
  <thead>
    <tr>
      <th>제목</div></th>
      <th>작성자</th>
      <th>이메일</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.name %></td>
        <td><%= post.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>|<%= link_to '게시물 작성', new_post_path %>|</p>
<p><a href="/" class="btn btn-default">메인으로</a></p>
</div>